---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title>Richard Li</title>
    <link href="http://richardli.me/atom.xml" rel="self"/>
    <link href="http://richardli.me/"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://richardli.me/</id>
    <author>
        <name>Richard Li</name>
        <email>me@richardli.me</email>
    </author>

    {% for post in site.posts limit:10 %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="http://richardli.me{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>http://richardli.me{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endfor %}

</feed>
